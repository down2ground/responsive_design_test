{
    "options": {
        "verbose": true
    },
    "default": {
        "input-root": "doc_src",
        "output-root": "doc/content",
        "template": "doc_src/templates/multipage.html",
        "no-css": true,
        "verbose": true
    },
    "documents": [
        { "input-root": "", "output-root": "", "input": "readme.txt", "title": "Home",
            "page-flows": ["sections", "nav"] },
        { "input": "sections/references.txt", "output": "sections/references.html",
            "title": "References", "code": "refs", "page-flows": ["sections", "nav"] },

        { "input": "sections/content.txt", "output": "sections/multipage.html",
            "title": "Multipage", "page-flows": ["sections", "nav"] },
        { "input": "sections/content_overflown.txt", "output": "sections/multipage_overflown.html",
            "title": "Multipage (overflown)", "page-flows": ["sections", "nav"] },

        { "input": "sections/content_dark.txt", "output": "sections/content_dark.html",
            "title": "Dark theme", "page-flows": ["sections", "nav"] },

        { "input": "sections/content.txt", "output": "sections/singlepage.html", "title": "Single page",
            "page-flows": ["singlepage"],
            "template": "doc_src/templates/default.html",
            "link-css": ["doc/layout/styles.css", "doc/themes/light_default_content.css",
                "doc/layout/flex.css"]
        },
        { "input": "sections/content_overflown.txt", "output": "sections/singlepage_overflown.html",
            "title": "Single page (overflown)",
            "page-flows": ["singlepage"],
            "template": "doc_src/templates/default.html",
            "link-css": ["doc/layout/styles.css", "doc/themes/light_default_content.css",
                "doc/layout/flex.css"]
        },
        
        { "input": "sections/dummy_index_content.txt", "title": "Dummy index content",
            "page-flows": ["sections", "nav"] }
    ],
    "plugins": {
        "relative-paths": {
            "markers": ["path"],
            "paths": {
                "resource_path": "doc/",
                "pict": "doc/pict/"
            }
        },
        "page-flows": {
            "header": [
                { "link": "readme.html", "title": "", "image": "favicon.png", "image_class": "logo_image" },
                { "link": "readme.html", "title": "Home", "class": "wide_only" },
                { "link": "doc/content/index_page.html", "title": "Index", "class": "wide_only" },
                { "link": "doc/content/index_page.html", "title": "", "class": "narrow_only",
                    "image": "layout/pict/search.png", "image_class": "header_image index_image" },
                { "link": "https://github.com/arctrong/responsive_design_test", "title": "GitHub",
                    "external": true, "class": "wide_only" }
            ],
            "links_from_header": { "groups": ["sidebar"], "items": [
                { "link": "https://github.com/arctrong/responsive_design_test", "title": "GitHub",
                    "external": true, "class": "narrow_only align_right" }
            ]},
            "sections": { "groups": ["sidebar"] },
            
            "singlepage": { "title": "Single-page", "groups": ["sidebar"] },
            "other_projects": { "title": "Other projects", "groups": ["sidebar"], "items": [
                { "link": "project/flexible_demo.html", "title": "flexible_demo" }
            ]},
            
            "useful_links": { "title": "Useful links", "groups": ["sidebar"], "items": [
                { "link": "https://daringfireball.net/projects/markdown/", "title": "Markdown", "external": true },
                { "link": "https://github.com/arctrong/md2html", "title": "md2html", "external": true }
            ]}
        },
        "variables": {
#            "logo": "<b><span style=\"color:#59f;margin-right:7px;\">Responsive</span></b>",
            "show_source_link": true,
            "theme": "light_default"
        },
        "index": {"index": {"output": "index_page.html", "title": "Index", "index-cache": "index_cache.json", 
                    "index-cache-relative": true, "letters": true, "letters-block": true,
                    "add-link-css": ["doc/layout/index.css"] }
        },
        "page-links": { "markers": ["page"] },
        "page-variables": {}
    }
}
